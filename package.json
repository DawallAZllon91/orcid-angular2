{
  "name": "ng-orcid",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",

    "start": "npm-run-all --parallel cors serve",
    "start:aot": "npm-run-all --parallel cors serve:aot",
    "serve": "ng serve --configuration=en-sandbox --disable-host-check",
    "serve:aot": "ng serve --aot --configuration=en-sandbox --disable-host-check",

    "start:ar": "npm-run-all --parallel cors serve:ar",
    "start:ar:aot": "npm-run-all --parallel cors serve:ar:aot",
    "serve:ar": "ng serve --configuration=ar-sandbox --disable-host-check",
    "serve:ar:aot": "ng serve --aot --configuration=ar-sandbox --disable-host-check",

    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "cors": "cross-env HOST=0.0.0.0 PORT=4100 node cors-anywhere",
    "format:fix-all": "pretty-quick",
    "format:fix-stage": "pretty-quick --staged",
    "format:check": "prettier --config ./.prettierrc --list-different \"**/*{.ts,.js,.json,.css,.scss,html}\" ",
    "build:i18n:define": "ng xi18n  --i18n-format=xlf2 --output-path locale",
    "build:i18n:generate": "node ./src/locale/translate-file-generator",
    "build:i18n": "npm run build:i18n:define && npm run build:i18n:generate",
    "build:en": "npm run build:i18n && ng run ng-orcid:build:production-en",
    "build:ar": "npm run build:i18n && ng run ng-orcid:build:production-en",
    "build:prod": "npm run build:i18n && ng run ng-orcid:build:production-en && ng run ng-orcid:build:production-fr && ng run ng-orcid:build:production-ar && ng run ng-orcid:build:production-ca && ng run ng-orcid:build:production-cs && ng run ng-orcid:build:production-en && ng run ng-orcid:build:production-en  && ng run ng-orcid:build:production-es  && ng run ng-orcid:build:production-it  && ng run ng-orcid:build:production-ja  && ng run ng-orcid:build:production-ko  && ng run ng-orcid:build:production-lr  && ng run ng-orcid:build:production-pt  && ng run ng-orcid:build:production-rl  && ng run ng-orcid:build:production-ru  && ng run ng-orcid:build:production-uk  && ng run ng-orcid:build:production-xx  && ng run ng-orcid:build:production-zh_CN  && ng run ng-orcid:build:production-zh_TW"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/cdk": "~7.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/material": "^7.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/pwa": "^0.12.1",
    "@angular/router": "^6.1.0",
    "@angular/service-worker": "^6.1.0",
    "@material/layout-grid": "^0.41.0",
    "core-js": "^2.5.4",
    "hammerjs": "^2.0.8",
    "properties-to-json": "^0.1.4",
    "rxjs": "~6.2.0",
    "timers": "^0.1.1",
    "xml2js": "^0.4.19",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.8.0",
    "@angular/cli": "~6.2.3",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "@types/xml2js": "^0.4.3",
    "axios": "^0.16.2",
    "codelyzer": "~4.3.0",
    "cors-anywhere": "^0.4.1",
    "cross-env": "^5.2.0",
    "husky": "^1.1.4",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "1.15.2",
    "pretty-quick": "^1.8.0",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "typescript": "~2.9.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s format:fix-stage lint"
    }
  }
}
